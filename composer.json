{
    "name": "mmo/yii2-utils",
    "description": "A collection of extensions for Yii Framework 2.0",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Marcin Morawski",
            "email": "marcin@morawskim.pl"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.2",
        "endclothing/prometheus_client_php": "^1.0",
        "guzzlehttp/psr7": "^1.6",
        "yiisoft/yii2": "~2.0.14"
    },
    "require-dev": {
        "laminas/laminas-diagnostics": "^1.6",
        "phpunit/phpunit": "^8.3"
    },
    "suggest": {
        "ext-intl": "Needed to generate slug by SlugGenerator's action",
        "ext-mbstring": "Needed to mask string by Scramble class",
        "laminas/laminas-diagnostics": "Needed to use LaminasDiagnostics action"
    },
    "autoload": {
        "psr-4": {
            "mmo\\yii2\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "mmo\\yii2\\tests\\": "tests"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ]
}
